  qry="$1"
  arg="$2"

  sep=""

  if [ -n "$qry" ]
  then
    sep=" AND "
  fi

  trm=""
  case "$arg" in
    pathway )
      trm="pathway [TYPE]"
      ;;
    * )
      echo "${INVT} ERROR: ${LOUD} Unrecognized -kind option $arg${INIT}" >&2
